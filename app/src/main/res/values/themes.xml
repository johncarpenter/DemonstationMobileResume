        <item name="colorPrimaryDark">@color/pal_primary_dark</item>
        <item name="android:textColorPrimary">@color/pal_text_color</item>
        <item name="android:textColorSecondary">@color/pal_text_color</item>
        <item name="android:textColorHighlight">@color/pal_color_accent</item>
