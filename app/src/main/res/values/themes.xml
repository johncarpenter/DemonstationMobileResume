        <item name="android:textColorPrimaryInverse">@color/pal_text_color_inverse</item>
        <item name="android:textColorSecondaryInverse">@color/pal_text_color_inverse</item>
        <item name="android:textColorHighlightInverse">@color/pal_color_accent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
